@model Dictionary<string, string>
<!--====== NAVBAR NINE PART START ======-->

<section class="navbar-area navbar-nine">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav class="navbar navbar-expand-lg">
                    <a class="navbar-brand" href="index.html">
                        <img src="~/assets/images/white-logo.svg" alt="Logo" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNine"
                            aria-controls="navbarNine" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="toggler-icon"></span>
                        <span class="toggler-icon"></span>
                        <span class="toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse sub-menu-bar" id="navbarNine">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="page-scroll active" href="#hero-area">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="page-scroll" href="#services">Services</a>
                            </li>

                            <li class="nav-item">
                                <a class="page-scroll" href="#pricing">Pricing</a>
                            </li>
                            <li class="nav-item">
                                <a class="page-scroll" href="#contact">Contact</a>
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole(UserRoles.Admin.ToString()) || User.IsInRole(UserRoles.Moderator.ToString()))
                                {
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="Home" asp-area="Admin">Admin Panel</a>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a asp-action="Logout" asp-controller="Account" asp-area="Admin">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a asp-action="Login" asp-controller="Account" asp-area="Admin">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="Register" asp-controller="Account" asp-area="Admin">Register</a>
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="navbar-btn d-none d-lg-inline-block">
                        <a class="menu-bar" href="#side-menu-left"><i class="lni lni-menu"></i></a>
                    </div>
                </nav>
                <!-- navbar -->
            </div>
        </div>
        <!-- row -->
    </div>
    <!-- container -->
</section>

<!--====== NAVBAR NINE PART ENDS ======-->